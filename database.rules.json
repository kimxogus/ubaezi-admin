{
  "rules": {
    "users": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["uid"],
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "stores": {
      ".read": true,
      ".write": "auth != null",
      ".indexOn": ["id", "category"]
    }
  }
}
