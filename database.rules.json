{
  "rules": {
    "users": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["uid"],
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      },
      "favorites": {
        ".read": true,
        ".write": "auth.token.email_verified == true"
      }
    },
    "suggestions": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["field", "targetId"]
    },
    "stores": {
      ".read": true,
      ".write": "auth.token.email_verified == true",
      ".indexOn": ["name", "category", "favoriteUserCount", "sortOrder"]
    },
    "menus": {
      ".read": true,
      ".write": "auth.token.email_verified == true",
      ".indexOn": [
        "name",
        "menuGroupId",
        "storeId",
        "favoriteUserCount",
        "sortOrder"
      ]
    },
    "menuGroups": {
      ".read": true,
      ".write": "auth.token.email_verified == true",
      ".indexOn": ["name", "storeId", "favoriteUserCount", "sortOrder"]
    }
  }
}
